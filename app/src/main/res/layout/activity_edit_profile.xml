<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/ic_profilku"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:id="@+id/circleImageView" />

    <TextView
        android:id="@+id/txt_IdHost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID HOST "
        android:layout_marginTop="21dp"
        android:layout_below="@id/circleImageView"
        android:layout_alignLeft="@id/txt_nama"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#c70000"
        />

    <TextView
        android:id="@+id/masukan_IdHost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_below="@id/circleImageView"
        android:layout_toRightOf="@id/txt_IdHost"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="#c70000"
        />

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName  : "
        android:layout_marginTop="21dp"
        android:layout_below="@id/txt_IdHost"
        android:layout_alignLeft="@id/txt_nama"
        android:textSize="14sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama          : "
        android:id="@+id/txt_nama"
        android:layout_alignBaseline="@id/edt_nama"
        android:layout_alignBottom="@id/edt_nama"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email           :"
        android:id="@+id/txt_email"
        android:layout_alignBaseline="@id/edt_email"
        android:layout_alignBottom="@id/edt_email"
        android:layout_alignLeft="@id/txt_nama"
        android:textSize="14sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telepon      :"
        android:layout_marginTop="18dp"
        android:id="@+id/txt_telepon"
        android:layout_below="@id/edt_email"
        android:layout_alignLeft="@id/txt_email"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/txt_rekening"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rekening     :"
        android:layout_alignBaseline="@id/edt_rekening"
        android:layout_alignBottom="@id/edt_rekening"
        android:layout_alignLeft="@id/txt_telepon"
        android:textSize="14sp"
        />

    <EditText
        android:id="@+id/edt_username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/txt_username"
        android:layout_alignBottom="@id/txt_username"
        android:layout_toRightOf="@id/txt_username"
        android:layout_marginRight="10dp"
        />

    <EditText
        android:id="@+id/edt_nama"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_username"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@id/edt_username"
        android:layout_marginRight="10dp"
        />

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_nama"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@id/edt_nama"
        android:layout_marginRight="10dp"
        />

    <EditText
        android:id="@+id/edt_telepon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/txt_telepon"
        android:layout_alignBottom="@id/txt_telepon"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@id/edt_email"
        android:layout_marginRight="10dp"
        />

    <EditText
        android:id="@+id/edt_rekening"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_telepon"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@id/edt_telepon"
        android:layout_marginRight="10dp"
        />

    <Button
        android:id="@+id/btnSimpanEditProfil"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Ubah"
        android:textSize="18sp"
        android:background="#08aabf"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edt_rekening" />
</RelativeLayout>